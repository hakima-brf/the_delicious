<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/blue1"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image_search"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/profile"
            android:padding="5dp"
            android:layout_marginTop="10dp"

            />
        <TextView
            android:id="@+id/user_name_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="username"
            android:textSize="12dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_below="@+id/user_profile_image_search"
            />
        <TextView
            android:id="@+id/user_fullname_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="user profile name"
            android:textSize="12dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_below="@+id/user_name_search"
            />
        <Button
            android:id="@+id/follow_btn_search"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_below="@+id/user_fullname_search"
            android:layout_centerHorizontal="true"
            android:text="Follow"
            android:textSize="12dp"
            android:textAllCaps="false"
            android:layout_margin="10dp"

            />


    </RelativeLayout>

</RelativeLayout>