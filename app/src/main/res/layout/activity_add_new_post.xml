<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    tools:context=".AddNewPostActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"

        android:foreground="@color/black_forground"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout_add_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/add_post_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_marginRight="6dp"
        android:background="@color/blue">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/close_new_post_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/close"
                android:background="@color/blue"
                />


            <ImageButton
                android:id="@+id/save_new_post_btn"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/blue"
                android:src="@drawable/check" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar_layout_add_post">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/app_bar_layout_add_post"


            >

            <ImageView
                android:layout_marginTop="15dp"
                android:id="@+id/image_post"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"


                />

            <EditText
                android:id="@+id/title_post"
                android:drawableLeft="@drawable/point"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint=" the name of your plate your plate"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/country_plate_post"
                android:drawableLeft="@drawable/flag"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="  the country of your plate your plate"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/time_cooking_post"
                android:drawableLeft="@drawable/time"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint="  time needed in minutes"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/description_post"
                android:drawableLeft="@drawable/point"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint=" Describe your plate"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/ingredients_cooking_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint=" igredients( print space to add new items)"
                android:drawableLeft="@drawable/point"

                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="5dp"

                />
            <EditText
                android:id="@+id/methode_cooking_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint=" methode"
                android:drawableLeft="@drawable/point"

                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="5dp"
                />
            <EditText
                android:id="@+id/nbr_people_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:hint=" number of people"
                android:drawableLeft="@drawable/nbrpeople"

                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:padding="5dp"
                />





        </LinearLayout>
    </ScrollView>


</RelativeLayout>